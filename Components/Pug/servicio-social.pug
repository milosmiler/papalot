	body
		.contenedor-fixed
			include block/sedes.pug
			include block/header.pug
		section.cover
			img(src="images/cover-servicio-social.png"  alt="megapantalla")
			h2 Servicio Social #[br] Administrativo  #[br] y Cuates
		section.intro-servicio-social
			h2 Conoce más de ambos #[br] programas
			.container
				.item.flex
					button Servicio Social Administrativo
					button Cuates
			.admin
